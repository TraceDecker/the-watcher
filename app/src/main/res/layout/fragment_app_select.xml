<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorSelectBackground">

    <TextView
      android:id="@+id/selection_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/app_select_description"
      android:textSize="12pt"
      android:textAlignment="center"
      android:layout_margin="10dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>


        <GridView
          android:id="@+id/grid_view_apps"
          android:layout_width="match_parent"
          android:layout_height="550dp"
          android:layout_margin="10dp"
          android:columnWidth="100dp"
          android:verticalSpacing="24dp"
          android:horizontalSpacing="10dp"
          app:layout_constraintTop_toBottomOf="@id/selection_description"
          app:layout_constraintBottom_toTopOf="@id/next_button"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:stretchMode="spacingWidthUniform"/>


<!--  <LinearLayout-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="match_parent"-->
<!--    android:orientation="vertical">-->
<!--    <ImageView-->
<!--      android:id="@+id/image_test"-->
<!--      android:layout_width="141dp"-->
<!--      android:layout_height="142dp"/>-->

<!--  </LinearLayout>-->


    <Button
      android:id="@+id/next_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/next_button_text"
      android:layout_marginBottom="50dp"
      app:layout_constraintTop_toBottomOf="@id/grid_view_apps"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>